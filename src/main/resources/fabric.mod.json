{
    "schemaVersion": 1,
    "id": "opc",
    "version": "${version}",
    "name": "Offline Player Cache",
    "description": "An API to cache specific player data when they are offline.",
    "authors": [
        "CleverNucleus"
    ],
    "contact": {
        "homepage": "https://github.com/CleverNucleus/Offline-Player-Cache",
        "sources": "https://github.com/CleverNucleus/Offline-Player-Cache"
    },
    "license": "MIT",
    "icon": "assets/opc/icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "com.github.clevernucleus.opc.CacheInitializer"
        ],
        "cardinal-components-level": [
            "com.github.clevernucleus.opc.CacheInitializer"
        ]
    },
    "mixins": [
        "opc.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.15.0",
        "minecraft": "1.20.x",
        "java": ">=17"
    },
    "custom": {
        "cardinal-components": [
            "opc:cache"
        ]
    }
}